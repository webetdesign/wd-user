{% extends '@SonataAdmin/standard_layout.html.twig' %}

{% block sonata_nav %}
{% endblock sonata_nav %}

{% block logo %}
{% endblock logo %}

{% block sonata_left_side %}
{% endblock sonata_left_side %}

{% block body_attributes %}class="sonata-bc login-page"{% endblock %}

{% block sonata_wrapper %}
    <div id='admin-login-video'>
        <video preload="none" loop autoplay muted>
            <source src='{{ asset('bundles/webetdesigncms/wd_vid.mp4') }}' type='video/mp4'>
            <p class='vjs-no-js'>
                To view this video please enable JavaScript, and consider upgrading to a web browser that
                <a href='https://videojs.com/html5-video-support/' target='_blank'>supports HTML5 video</a>
            </p>
        </video>
    </div>

    <div class=" login-container d-flex justify-content-center align-items-center">
        <div class="login-box">
            {% block login_box_header %}
                <div class="login-logo">
                    <a href="{{ path('sonata_admin_dashboard') }}">
                        {% if sonata_admin.adminPool.getOption('title_mode') in ['single_image', 'both'] %}
                            <div class="d-flex">
                                <img src="{{ asset(sonata_admin.adminPool.titlelogo) }}"
                                     alt="{{ sonata_admin.adminPool.title }}">
                            </div>
                        {% endif %}
                    </a>
                </div>
            {% endblock %}
            <div class="login-box-body">
                {% block sonata_user_login_form %}
                    <p class="login-box-msg">{{ 'password_reset'|trans({}, 'wd_user') }}</p>

                    <div class="row">
                        <div class="col-xs-12">
                            {{ form_start(form) }}
                            {{ form_errors(form.plainPassword) }}
                            {{ form_row(form.plainPassword) }}
                        </div>
                    </div>
                    <div class="row" style="margin-top: 5px">
                        <div class="col-xs-12">
                            {{ form_widget(form.submit, {attr: {class: 'btn btn-primary btn-block btn-flat' }}) }}
                        </div>
                    </div>
                    {{ form_end(form) }}

                {% endblock %}
            </div>
        </div>
    </div>

{% endblock sonata_wrapper %}
